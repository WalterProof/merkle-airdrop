{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": false,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"allowJs": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"experimentalDecorators": true
	},
	"include": [
		"assets/**/*.ts",
		"assets/**/*.d.ts"
	]
}
